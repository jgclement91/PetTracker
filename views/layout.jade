doctype html
html
    head
        meta(name="viewport", content='width=device-width, initial-scale=1.0, user-scalable=no')
        title PetTracker
        link(rel='stylesheet', href='/css/bootstrap-responsive.css')
        link(rel='stylesheet', href='/css/bootstrap.min.css', media='screen')
        link(rel='stylesheet', href='/css/style.css', media='screen')
        script(src='http://code.jquery.com/jquery.js')
        script(src='/js/bootstrap.min.js')
        script(src='/js/notify.min.js')
        script(src='https://cdn.socket.io/socket.io-1.3.7.js')
    body(style='padding:10px;')
        -if(user)
            input(type="hidden" id="ioServer" value="#{ioServer}")
            script(type='text/javascript').
                var socket = io($('#ioServer').val());
                socket.on('animalOut', function (data) {
                    $.notify(data, {globalPosition: "top left"});
                });

        include navbar
        block content
        block foot
            include ./foot.jade

