extends ../layout
block content
    div.container
        div.row
            div.col-sm-6.col-md-4.col-md-offset-4
                    h1.text-center.login-title Gestion du profil
                        #user.signup-wall


                            img.img-polaroid(src='../uploads/#{user.picturePath}', style='width:150px; height:150px;')

                            form(role='form', action='/users/savePicture', method='POST', enctype="multipart/form-data")
                                div.form-inline
                                input.center(type="file", name="picturePath")
                                br
                                button(id='savePictureBtn', class='btn btn-small btn-primary disabled', type='submit', disabled="disabled") Enregistrer l'avatar
                            #profilePartial(style='margin-top:25px;')
                                include partialDetail



    script(type="text/javascript").

        $(document).ready(function () {
            $("#navProfile").parent().addClass("active");
        });

        $(document).on('change',"[name='picturePath']", function(){
            if ($("[name='picturePath']").val()!=""){
                $('#savePictureBtn').toggleClass("disabled");
                $('#savePictureBtn').removeAttr("disabled");
            }
        })

