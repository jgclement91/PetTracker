extends layout

block content
    div.container
        div.row
            div.col-sm-6.col-md-4.col-md-offset-4
                h1.text-center.login-title Application Pet Tracker
                    div.account-wall
                        img(class='profile-img', src='images/logo-petTracker.jpg')
                        form(class='form-signin', action='/login', method='POST')
                            input(type='text', name='username' class='form-control', placeholder='Nom d\'utilisateur',required, autofocus)
                            input(type='password', name='password' class='form-control', placeholder='Mot de passe', required)
                            button(class='btn btn-lg btn-primary btn-block', type='submit') Se connecter
                            span.clearfix
                    #message
                    if message
                        h1.text-center.error-message #{message}


    script(type='text/javascript').
        $(document).ready(function () {
            $("#navConnexion").parent().addClass("active");
        });

